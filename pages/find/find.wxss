/************************ 工具条 *****************************/
page{
  background-color: #f0f0f0;
  color: #464646;
}
.fun-bar{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  background-color: #ffffff;
  color: #f48349;
  padding: 20rpx;
}
.fun-bar .fun-item{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-right: 30rpx;
  font-size: 28rpx;
}

.fun-bar .fun-item image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
/*********************** 品牌精选 *************************/
.brand-view{
  background-color: #ffffff;
  margin-top: 30rpx;
}
.brand-view .brand-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #e4531e;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: solid 2rpx #e5e5e5;
}
.brand-view .brand-list{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.brand-view .brand-list .brand-item{
  border-right: solid 2rpx #e5e5e5;
  flex-grow: 1;
  padding: 20rpx 20rpx 0 20rpx;
}
.brand-view .brand-list .brand-item .item-title{
  font-size: 28rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.brand-view .brand-list .brand-item .item-title image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.brand-view .brand-list .brand-item .item-sub-title{
  color: #989898;
  font-size: 28rpx;
}
.brand-view .brand-list .brand-item .item-cover{
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: flex-end;
}
.brand-view .brand-list .brand-item .item-cover image{
  width: 200rpx;
  height: 120rpx;
}

.brand-view .brand-list .brand-item.item-for-new .item-title{
  color: #f48349;
}
.brand-view .brand-list .brand-item.item-for-ju .item-title{
  color: #f684a5;
}
.brand-view .brand-list .brand-item.item-for-ticket .item-title{
  color: #a27554;
}
/*********************** 好券直播 *************************/
.live-view{
  background-color: #ffffff;
  margin-top: 30rpx;
}

.live-view .live-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #e4531e;
  padding-top: 20rpx;
  text-align: center;
}
.live-view .live-title image{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}
.live-view .live-tab-bar{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  border-bottom: solid 2rpx #e6e6e6;
}
.live-view .live-tab-bar .live-tab{
  display: inline-block;
  padding: 30rpx;
  font-size: 28rpx;
}
.live-view .live-tab-bar .live-tab.selected{
  color: #e4531e;
  border-bottom: solid 4rpx #e4531e;
}

.live-item-list .live-item{
  display: flex;
  flex-flow: row nowrap;
}

.live-item-list .live-item .cover{
  width: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.live-item-list .live-item .cover image{
  width: 200rpx;
  height: 200rpx;
}
.live-item-list .live-item .detail{
  flex-grow: 1;
  border-bottom: solid 2rpx #e5e5e5;
  font-size: 26rpx;
  padding: 10rpx;
}
.live-item-list .live-item .detail .detail-row1{
  height: 80rpx;
  text-overflow: ellipsis;
}
.live-item-list .live-item .detail .detail-row2{
  color: #ababab;
  margin-top: 6rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.live-item-list .live-item .detail .detail-row3{
  color: #ababab;
  margin-top: 6rpx;
}
.live-item-list .live-item .detail .detail-discount{
  font-weight: bold;
  font-size: 30rpx;
  color: #000000;
}
.live-item-list .live-item .detail .detail-row4{
  font-size: 20rpx;
  color: #ffffff;
  background-color: #fbd294;
  border-radius: 15rpx;
  margin-top: 6rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.live-item-list .live-item .detail .detail-ticket-price{
  padding: 0 10rpx;
  background-color: #ed9c41;
  border-radius: 15rpx;
}
.live-item-list .live-item .detail .detail-ticket-surplus{
  text-align: center;
  flex-grow: 1;
}
.live-item-list .live-item .price{
  width: 260rpx;
  border-bottom: solid 2rpx #e5e5e5;
  font-size: 28rpx;
  color: #ef5a0a;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.live-item-list .live-item .price view{
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #ef5a0a;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}
.live-item-list .live-item .price image{
  width: 36rpx;
  height: 36rpx;
}