page{
  background-color: #f0f0f0;
  color: #464646;
  font-size: 28rpx;
}

.arrow{
  width: 50rpx;
  height: 50rpx;
}

.userinfo{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx;
  margin-top: 40rpx;
  border-top: solid 2rpx #e5e5e5;
}
.userinfo .userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 60rpx;
}
.userinfo text{
  line-height: 80rpx;
}
.account-status{
  background-color: #ffffff;
  border-top: solid 2rpx #e5e5e5;
  border-bottom: solid 2rpx #e5e5e5;
  padding: 50rpx 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.account-status text{
  flex-grow: 1;
}

.menu-list{
  border-top: solid 2rpx #e5e5e5;
  margin: 30rpx 0;
  background-color: #ffffff;
}
.menu-list .menu-item{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.menu-list .menu-item .item-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.menu-list .menu-item text{
  flex-grow: 1;
}